{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // "allowImportingTsExtensions": true,
    "emitDeclarationOnly": false,
    "allowJs": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "types": ["node"],
  },
  "include": ["src/**/*", "src/main.ts"],
  "references": [],
  "exclude": [
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}